@model WebApplication1.Models.Users









@{
    ViewData["Title"] = "Register";
}

<style>
    .registerPage {
        height: 100%;
        width: 100%;
        display: flex;
        justify-content: center;
    }

    .registerFormContainer {
        margin-top: 10vh;
        width: 478px;
    }

    .registerForm {
        text-align: left;
        border: 3px solid green;
        border-radius: 16px;
        padding: 48px;
        position: relative;
        top: 0;
        left: 0;
    }

    .inputTextWrapper {
    }

    .inputText {
        width: 100%;
        height: 5vh;
    }

    .inputButtonWrapper {
        margin-top: 5vh;
    }

    .inputButton {
        width: 100%;
        height: 5vh;
        background-color: green;
        color: white;
    }

    .formTitle {
        padding: 5%;
        text-align: center;
    }
</style>





@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()


    <div class="registerPage">
        <div class="registerFormContainer">
            <div class="registerForm">
                <div class="formTitle">
                    <h2>Sign Up</h2>
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                </div>
                <form asp-controller="CustomerRegistration" asp-action="Register" method="post">
                    <div class="inputTextWrapper">
                        Username
                        @Html.EditorFor(model => model.userName, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.userName, "", new { @class = "text-danger" })
                    </div>
                    <br />
                    <div class="inputTextWrapper">
                        Password
                        @Html.EditorFor(model => model.userPassword, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.userPassword, "", new { @class = "text-danger" })
                    </div>

                    <br />
                    <div class="inputButtonWrapper">
                        <button class="inputButton" type="submit">Submit</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
